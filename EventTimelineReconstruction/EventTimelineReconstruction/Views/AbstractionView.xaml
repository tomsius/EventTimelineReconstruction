<Window x:Class="EventTimelineReconstruction.Views.AbstractionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventTimelineReconstruction.Views"
        xmlns:converters="clr-namespace:EventTimelineReconstruction.Converters" 
        xmlns:fa="http://schemas.fontawesome.com/icons/svg"
        mc:Ignorable="d"
        Title="{DynamicResource Abstraction_Window_Title}" 
        Height="800" 
        Width="800"
        Icon="/Resources/magnifying-glass.ico"
        Closing="Window_Closing">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:FilterButtonsConverter x:Key="ButtonConverter" />
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>
        <Style TargetType="{x:Type ListView}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Silver" />
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True" Margin="0 20 0 20">
        <Grid DockPanel.Dock="Top" HorizontalAlignment="Stretch" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button 
                Grid.Column="1"
                Style="{StaticResource ConfirmationButton}"
                Width="120"
                Height="30"
                Padding="0 0 0 2"
                Command="{Binding AbstractCommand}">
                <TextBlock
                    Text="{DynamicResource Abstraction_Form}" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Button>
            <StackPanel HorizontalAlignment="Right" Grid.Column="2" Margin="10 0 0 0" Visibility="Collapsed" Orientation="Horizontal" x:Name="Threshold" >
                <TextBox Width="40" VerticalAlignment="Center" x:Name="FromHoursTextBox" Text="{Binding Threshold, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="min." VerticalAlignment="Center" Margin="5 0 10 0" />
                <Button 
                    Style="{StaticResource CancelButton}"
                    Width="140"
                    Padding="0 0 0 2"
                    Margin="0 0 10 0"
                    Command="{Binding ReformLowLevelArtefactsCommand}"
                    IsEnabled="True">
                    <TextBlock
                        Text="{DynamicResource Abstraction_Reform}" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                        Width="120"/>
                </Button>
            </StackPanel>
        </Grid>
        <StackPanel 
            DockPanel.Dock="Bottom" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            x:Name="Buttons"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.VirtualizationMode="Recycling">
            <Button 
                Style="{StaticResource AbstractionLevelButton}"
                Width="140"
                Height="30"
                Padding="0 0 0 2"
                Command="{Binding ChangeCommand}"
                Margin="0 10 5 0"
                IsEnabled="False">
                <TextBlock
                    Text="{DynamicResource Abstraction_High_Level_Events}" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource ButtonConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" />
                        <Binding ElementName="AbstractionLevels" />
                        <Binding ElementName="Buttons" />
                        <Binding ElementName="Threshold" />
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
            <Button 
                Style="{StaticResource AbstractionLevelButton}"
                Width="140"
                Height="30"
                Padding="0 0 0 2"
                Command="{Binding ChangeCommand}"
                Margin="0 10 5 0"
                IsEnabled="True">
                <TextBlock
                    Text="{DynamicResource Abstraction_Low_Level_Events}" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource ButtonConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" />
                        <Binding ElementName="AbstractionLevels" />
                        <Binding ElementName="Buttons" />
                        <Binding ElementName="Threshold" />
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
            <Button 
                Style="{StaticResource AbstractionLevelButton}"
                Width="140"
                Height="30"
                Padding="0 0 0 2"
                Command="{Binding ChangeCommand}"
                Margin="0 10 5 0"
                IsEnabled="True">
                <TextBlock
                    Text="{DynamicResource Abstraction_High_Level_Artefacts}" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource ButtonConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" />
                        <Binding ElementName="AbstractionLevels" />
                        <Binding ElementName="Buttons" />
                        <Binding ElementName="Threshold" />
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
            <Button 
                Style="{StaticResource AbstractionLevelButton}"
                Width="140"
                Height="30"
                Padding="0 0 0 2"
                Command="{Binding ChangeCommand}"
                Margin="0 10 0 0"
                IsEnabled="True">
